<script type="text/javascript">
$(function() {
$('.tabPane .title').bind('click', function (e) {
var s=s_gi(s_account), tabId, tab,
type = $('meta[property=og:type]').attr('content') , ctrObj = $(this).closest('.tabPane');
if( typeof type === 'undefined' ) {
type = 'homepage';
}
tabId = "tabs-1-" + (ctrObj.index() + 1);
tab = $('#' + tabId).find('span').html();
s.linkTrackVars='prop30,prop31,events'; s.linkTrackEvents='event38';
s.prop30=tab + ' - ' + s.channel + ' ' + type + ' - position ' + ($(this).closest('.article').index() + 1);
s.prop31=tab + ' - ' + s.channel + ' ' + type + ' - ' + $(this).html().replace(/'/g, "\\'");
s.events='event38';
s.tl(this,'o', tab + ' Tab - ' + location.hostname);
s.prop30 = s.prop31 = s.events = '';
});
});
</script>
</div>
</div>
